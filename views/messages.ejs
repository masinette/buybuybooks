<!DOCTYPE html>
<html lang="en">
  <head>
    <title>BuyBuy Chat Room</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="./css/header.css" type="text/css" />
    <link rel="stylesheet" href="./css/nav.css" type="text/css" />
    <link rel="stylesheet" href="./css/myads.css" type="text/css" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>


  <body>

    <%- include('partials/_headers.ejs') %>
    <h1 style="padding-top: 130px; display: flex; justify-content: center;">Messages</h1>
    <% for (item of messages) { %>
      <div class="messages-box">
          <main>
          <div class="chat-room" style="flex-direction: column">
            <p style="padding-left: 10px">
              <ol id="history" style="padding-left:0">
                <h4>TITLE</h4>
                <ul><%= item.message %></ul>
                <ul><%= item.sender_id%></ul>
                  <ul><%= item.message %></ul>
                    <ul><%= item.sender_id%></ul>
              </ol>
              <form method="POST" action="#" id="message-buyer-seller">
                <input type="text" name="message" id="message-input"></input>
                <button type="submit" value="submit" id="send-message">Send Message</button>
              </form>
            </p>
          </div>
        </article>
      </main>
      </div>
      <% } %>
    </main>
    <script src="https://code.jquery.com/jquery-2.2.2.min.js"></script>
    <script src="app.js"></script>
    <div><link rel="stylesheet" type="text/css" href="chrome-extension://idpbkophnbfijcnlffdmmppgnncgappc/css/content.css"></div>
  </body>
</html>
