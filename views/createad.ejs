<body style="margin: 1em;">
  <h3>Post Ad</h3>
    <form class="form-inline" action="/createad" method="POST">
      <div class="form-group mb-2" style="flex-direction: column; align-items: flex-start; font-weight: bold;">
        <label for="title">Enter Title:</label>
        <input class="form-control" type="text" name="title" placeholder="bicycle" style="width: 300px; margin: 1em"></input>
        <label for="image-url">Enter Img Url:</label>
        <input class="form-control" type="text" name="image-url" placeholder="shorturl.at/qJO38" style="width: 300px; margin: 1em"></input>
        <label for="item-price">Enter Price:</label>
        <input class="form-control" type="text" name="item-price" placeholder="600" style="width: 300px; margin: 1em"></input>
        <label for="item-description">Enter Description:</label>
        <textarea class="form-control" type="text" name="item-description" placeholder="10 speed schwinn bicycle" style="width: 300px; margin: 1em"></textarea>
        <label for="item-category">Enter Category:</label>
        <input class="form-control" type="text" name="item-category" placeholder="Bikes" style="width: 300px; margin: 1em"></input>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </body>
